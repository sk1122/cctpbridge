generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [uuid_ossp(map: "uuid-ossp")]
}

model transaction {
  id         String   @id @unique @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  createdAt  DateTime @default(dbgenerated("(now() AT TIME ZONE 'utc'::text)")) @db.Timestamptz(6)
  updatedAt  DateTime @db.Timestamptz(6)
  sender     String   @db.VarChar
  receiver   String   @db.VarChar
  srcChain   Int
  srcToken   String   @db.VarChar
  srcAmount  String   @db.VarChar
  srcTx      String   @unique @db.VarChar
  dstChain   Int
  dstToken   String   @db.VarChar
  dstAmount  String   @db.VarChar
  dstTx      String?  @unique @db.VarChar
  slippage   Int
  pending    Boolean? @default(true)
  srcMessage String   @unique @db.VarChar
}
